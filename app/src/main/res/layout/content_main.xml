<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/peter_river"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:id="@+id/layout0">

        <TextView
            android:id="@+id/main_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/title_size"
            android:padding="@dimen/text_padding"
            android:textStyle="bold"
            android:text="@string/title"
            android:textColor="@color/light_font"
            android:shadowColor="@color/black"
            android:shadowDy="3"
            android:shadowDx="3"
            android:shadowRadius="3"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/layout1"
        android:layout_below="@+id/layout0"
        android:padding="2dp">

        <Button
            android:id="@+id/linear_layout_button"
            android:text="Linear"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:layout_weight="0.5"
            />
        <Button
            android:id="@+id/relative_layout_button"
            android:text="Relative"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:layout_weight="0.5"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/layout2"
        android:layout_below="@+id/layout1"
        android:padding="2dp">


        <Button
            android:id="@+id/text_view_example_button"
            android:text="TextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:layout_weight="0.5"

            />
        <Button
            android:id="@+id/image_view_example_button"
            android:text="ImageView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:layout_weight="0.5"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/layout3"
        android:layout_below="@+id/layout2"
        android:padding="2dp">

        <Button
            android:id="@+id/edit_text_example_button"
            android:text="Edit Text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:layout_weight="0.5"
            />
        <Button
            android:id="@+id/activity_example_button"
            android:text="Activity"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:layout_weight="0.5"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/layout4"
        android:layout_below="@+id/layout3"
        android:padding="2dp">

        <Button
            android:id="@+id/scroll_view_button"
            android:text="ScrollView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:layout_weight="0.5"
            />
        <Button
            android:id="@+id/card_view_button"
            android:text="CardView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:layout_weight="0.5"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/layout5"
        android:layout_below="@+id/layout4"
        android:padding="2dp">

        <Button
            android:id="@+id/list_view_button"
            android:text="ListView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:layout_weight="0.5"
            />
        <Button
            android:id="@+id/recycle_view_button"
            android:text="RecycleView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:layout_weight="0.5"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:id="@+id/layout6"
        android:layout_below="@+id/layout5">

        <ImageView
            android:id="@+id/image_monster"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/monster"
            />

    </LinearLayout>





</RelativeLayout>
